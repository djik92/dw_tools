/**
 * Implement hook_disable()
 * Désactivation du module Dw_tools
 * @author djik
 * @return NULL
 */
function dw_tools_disable(){
	if (module_exists('menu')) {
		if ($devel_menu = menu_load('djikweb')) {
			menu_delete($devel_menu);
		}
		if ($devel_menu = menu_load('djikweb_admin')) {
			menu_delete($devel_menu);
		}
	}
	
}
